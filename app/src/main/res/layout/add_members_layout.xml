<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/add_member_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter friend's name"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/add_member_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Friend name"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/add_member_text"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/add_member_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@+id/add_member_field"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"/>
</RelativeLayout>