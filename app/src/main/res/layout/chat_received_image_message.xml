<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_profile_pic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/message_layout"
        android:src="@drawable/profile_image"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:id="@+id/message_layout"
        android:padding="5dp"
        android:background="@drawable/message_received_layout"
        android:layout_toEndOf="@id/sender_profile_pic"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sender_name"
            android:text="@string/chat_contact_name"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:id="@+id/message_content"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/sender_name"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/message_timestamp"
            android:text="@string/timestamp"
            android:textSize="12sp"
            android:textColor="@color/colorText"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/message_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>
</RelativeLayout>